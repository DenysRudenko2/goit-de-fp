# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Required: User Configuration
USER_NAME=your_username_here

# Required: Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=your_kafka_server:port
KAFKA_USERNAME=your_kafka_username
KAFKA_PASSWORD=your_kafka_password
KAFKA_SECURITY_PROTOCOL=SASL_PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN

# Required: MySQL Configuration
MYSQL_HOST=your_mysql_host
MYSQL_PORT=3306
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DRIVER=com.mysql.cj.jdbc.Driver

# Optional: Data Sources (can use defaults)
FTP_URL=https://ftp.goit.study/neoversity/

# Optional: Data Lake Configuration (can use defaults)
DATA_LAKE_PATH=/tmp/data_lake

# Optional: Spark Configuration (can use defaults)
SPARK_MASTER=local[*]
SPARK_APP_NAME=OlympicDataPipeline